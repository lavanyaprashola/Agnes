                             new string[]{"COST:"," 500-1000","1000-5000","5000-10000" },
                             new string []{"SIZE:","S","M","L","XL","XXL"}
                             
                              };
                                   for (int i = 0; i < arr.Length; i++)  
                                    {  
                                        for (int j = 0; j < arr[i].Length; j++)  
                                        {  
                                            Console.WriteLine(arr[i][j]+" ");  
                                        }  
                                        Console.WriteLine();  
                                    } 
                                     Console.WriteLine("ENTER YOUR FILTER YOU WANT") ;
